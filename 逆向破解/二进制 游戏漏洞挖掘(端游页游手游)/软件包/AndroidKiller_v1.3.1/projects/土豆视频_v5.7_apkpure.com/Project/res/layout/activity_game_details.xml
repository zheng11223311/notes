<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/detail_parent" android:background="#ffe2e2e2" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/content_layout" android:background="@android:color/transparent" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ScrollView android:id="@id/scrollView1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_above="@id/fl_detail_download" android:layout_alignParentTop="true">
            <LinearLayout android:orientation="vertical" android:id="@id/content_container" android:paddingBottom="@dimen/game_card_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <include layout="@layout/layout_game_details_top" />
            </LinearLayout>
        </ScrollView>
        <View android:background="#ffd3d3d3" android:layout_width="fill_parent" android:layout_height="1.0px" android:layout_above="@id/fl_detail_download" />
        <RelativeLayout android:id="@id/fl_detail_download" android:background="#ffffffff" android:paddingTop="@dimen/fl_detail_download_padding_vertical" android:paddingBottom="@dimen/fl_detail_download_padding_vertical" android:layout_width="fill_parent" android:layout_height="@dimen/fl_detail_download_height" android:layout_alignParentBottom="true">
            <com.youku.gamecenter.widgets.InnerProgressView android:id="@id/innerProgressView" android:background="#ffd6d6d6" android:layout_width="@dimen/rl_download_width" android:layout_height="@dimen/inner_progress_height" android:layout_centerInParent="true">
                <View android:id="@id/download_progress" android:layout_width="0.0dip" android:layout_height="@dimen/download_progress_height" />
            </com.youku.gamecenter.widgets.InnerProgressView>
            <RelativeLayout android:gravity="center" android:id="@id/rl_download" android:layout_width="@dimen/rl_download_width" android:layout_height="@dimen/rl_download_height" android:layout_centerInParent="true">
                <ImageView android:id="@id/download_icon" android:layout_width="@dimen/download_icon_width" android:layout_height="@dimen/download_icon_height" android:src="@drawable/download_in" android:layout_centerVertical="true" android:contentDescription="@string/str_image" />
                <TextView android:textSize="@dimen/download_text_text_size" android:textColor="#ffffffff" android:gravity="center" android:id="@id/download_text" android:layout_width="@dimen/download_text_width" android:layout_height="@dimen/download_text_height" android:text="@string/game_download" android:layout_toRightOf="@id/download_icon" android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <TextView android:textSize="@dimen/no_result_textsize" android:textColor="#ffb6b6b6" android:layout_gravity="center" android:id="@id/tv_no_result" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/game_no_detail_retry" android:layout_centerInParent="true" />
    <ImageView android:id="@id/iv_no_result" android:visibility="gone" android:layout_marginBottom="@dimen/no_result_textsize" android:src="@drawable/pic_no_results" android:scaleType="fitCenter" android:layout_above="@id/tv_no_result" android:contentDescription="@string/str_image" style="@style/game_center_NoResultStyle" />
</RelativeLayout>