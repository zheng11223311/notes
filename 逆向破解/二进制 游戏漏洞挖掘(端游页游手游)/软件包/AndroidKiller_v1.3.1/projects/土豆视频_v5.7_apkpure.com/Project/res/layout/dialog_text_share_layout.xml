<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/share_layout" android:background="@color/share_layout_bg_color" android:paddingBottom="@dimen/cancel_button_margin_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:id="@id/logo_layout2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/bind_icons_margin_right" android:layout_marginTop="@dimen/bind_icons_margin_top" android:layout_marginRight="@dimen/bind_icons_margin_left" android:layout_marginBottom="@dimen/bind_icons_margin_top" android:layout_below="@id/logo_layout">
            <LinearLayout style="@style/share_layout_style">
                <ImageView android:id="@id/weixin_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/weixin" android:scaleType="fitXY" />
                <TextView android:text="微信好友" style="@style/share_layout_text_style" />
            </LinearLayout>
            <LinearLayout style="@style/share_layout_style">
                <ImageView android:id="@id/qq_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/weibo" android:scaleType="fitXY" />
                <TextView android:text="手机QQ" style="@style/share_layout_text_style" />
            </LinearLayout>
            <LinearLayout style="@style/share_layout_style">
                <ImageView android:id="@id/btn_other" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/qita" android:scaleType="fitXY" />
                <TextView android:text="其他" style="@style/share_layout_text_style" />
            </LinearLayout>
        </LinearLayout>
        <Button android:textSize="@dimen/cancel_button_textsize" android:id="@id/cancel_button" android:background="@drawable/cancel_btn" android:layout_width="@dimen/cancel_button_width" android:layout_height="@dimen/cancel_button_height" android:layout_marginLeft="@dimen/cancel_button_margin_left" android:layout_marginTop="@dimen/cancel_button_margin_top" android:layout_marginRight="@dimen/cancel_button_margin_right" android:text="取   消" android:layout_below="@id/logo_layout2" android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout android:id="@id/top_layout" android:background="@drawable/search_result_shadow_bg" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/share_layout" />
</RelativeLayout>