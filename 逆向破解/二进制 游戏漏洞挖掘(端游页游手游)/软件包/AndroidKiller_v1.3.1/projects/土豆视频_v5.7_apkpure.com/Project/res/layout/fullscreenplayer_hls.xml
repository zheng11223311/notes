<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/player_view" android:fitsSystemWindows="true" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <RelativeLayout android:id="@id/black_bg" android:background="@color/black" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <RelativeLayout android:id="@id/black_music_bg" android:background="@color/black" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" />
        <include android:id="@id/player_controller" layout="@layout/player_play_controller_hls" />
        <RelativeLayout android:id="@id/play_layout" android:background="#ff232323" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageView android:id="@id/hls_play_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="matrix" android:layout_centerInParent="true" />
            <RelativeLayout android:background="@color/player_controller_background" android:layout_width="fill_parent" android:layout_height="@dimen/hls_play_layout_height" android:layout_alignParentBottom="true">
                <ImageView android:id="@id/hls_play_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16.0dip" android:src="@drawable/full_play_icon" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>
        <include android:id="@id/plugin_fullscreen_hor_restart" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" layout="@layout/detail_retry" />
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/ll_detail_end" android:background="@drawable/bg_play" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="fill_parent">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/ll_replay" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageButton android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/play_over_replay_1" />
                <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5.0px" android:text="@string/replay" style="@style/detail_replay" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include android:id="@id/load_seekbar_container" android:visibility="visible" android:layout_width="fill_parent" android:layout_height="fill_parent" layout="@layout/detail_play_loading" />
</FrameLayout>