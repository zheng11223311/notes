<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/recomgame_card_root" android:background="#ffe2e2e2" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:visibility="gone" layout="@layout/layout_game_home_card_top" />
    <LinearLayout android:orientation="vertical" android:id="@id/recom_layout" android:background="@drawable/game_listview_item_selector" android:paddingBottom="@dimen/card_margin_27dp" android:layout_width="fill_parent" android:layout_height="@dimen/game_card_recom_height" android:layout_marginLeft="@dimen/game_card_margin" android:layout_marginTop="@dimen/game_card_margin" android:layout_marginRight="@dimen/game_card_margin">
        <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@id/left_layout" android:paddingBottom="@dimen/card_margin_27dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/card_margin_40dp">
                    <ImageView android:id="@id/recomgame_icon" android:layout_width="@dimen/list_item_icon_size" android:layout_height="@dimen/list_item_icon_size" android:layout_marginLeft="@dimen/card_margin_34dp" android:layout_marginTop="@dimen/card_margin_34dp" android:src="@drawable/game_list_item_default" android:layout_alignParentLeft="true" />
                    <ImageView android:id="@id/game_card_recom_type_present" android:visibility="gone" android:layout_width="@dimen/card_list_type_present_size" android:layout_height="@dimen/card_list_type_present_size" android:layout_marginLeft="@dimen/edit_game_recom_type_m" android:layout_marginTop="@dimen/edit_game_recom_type_m" android:src="@drawable/game_reom_type_present" android:layout_alignLeft="@id/recomgame_icon" android:layout_alignTop="@id/recomgame_icon" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:paddingRight="@dimen/card_margin_32dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/card_margin_34dp" android:layout_toRightOf="@id/left_layout">
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <RelativeLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true">
                            <TextView android:textSize="@dimen/mygame_card_title_size" android:gravity="top" android:id="@id/recomgame_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="游戏名称" android:singleLine="true" />
                            <LinearLayout android:orientation="horizontal" android:id="@id/recomgame_middle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/recomgame_middle_mt">
                                <ImageView android:layout_gravity="center_vertical" android:id="@id/recomgame_recom_type" android:visibility="gone" android:layout_width="@dimen/recomgame_recom_type_width" android:layout_height="@dimen/recomgame_recom_type_height" android:layout_marginRight="@dimen/recomgame_installed_count_ml" android:src="@drawable/game_reom_type_sf" android:text="首发" />
                                <TextView android:textSize="@dimen/card_count_textsize" android:textColor="#ff999999" android:layout_gravity="center_vertical" android:id="@id/recomgame_installed_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="152万安装" />
                                <TextView android:textSize="@dimen/card_count_textsize" android:textColor="#ff999999" android:layout_gravity="center_vertical" android:id="@id/recomgame_gamesize" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/recomgame_installed_count_ml" android:text="39.2M" />
                            </LinearLayout>
                        </LinearLayout>
                        <TextView android:textSize="@dimen/game_card_action_textsize" android:textColor="#ffffffff" android:gravity="center" android:id="@id/recomgame_action" android:background="#ff4ec6ff" android:layout_width="@dimen/game_card_action_width" android:layout_height="@dimen/game_card_action_height" android:layout_marginLeft="@dimen/card_margin_32dp" android:text="下载" android:layout_alignParentRight="true" />
                    </RelativeLayout>
                    <TextView android:textSize="@dimen/card_desc_textsize" android:textColor="#ff999999" android:id="@id/recomgame_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/recomgame_desc_mt" android:text="2014年首款动作卡拍游戏，此款游戏汲取景点堆栈游戏精髓，且推出新的" android:maxLines="3" android:lineSpacingExtra="@dimen/recomgame_desc_line" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View android:id="@id/recomcard_line" android:background="#ffc9c9c9" android:layout_width="fill_parent" android:layout_height="2.0px" android:layout_marginLeft="@dimen/game_card_margin" android:layout_marginRight="@dimen/game_card_margin" android:layout_alignParentBottom="true" />
    <RelativeLayout android:background="@drawable/game_center_recom_bg_tudou" android:layout_width="@dimen/game_center_recom_txt_width" android:layout_height="@dimen/game_center_recom_txt_height" android:layout_marginLeft="@dimen/recom_banner_left_margin" android:layout_marginTop="@dimen/card_margin_27dp" android:layout_marginBottom="@dimen/card_margin_27dp" android:layout_alignLeft="@id/recom_layout" android:layout_alignBottom="@id/recom_layout">
        <TextView android:textSize="@dimen/mygame_card_title_sizes" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mygame_recomm_txt_margin_left" android:layout_marginTop="@dimen/mygame_recomm_txt_margin_top" android:text="编辑推荐" />
    </RelativeLayout>
</RelativeLayout>