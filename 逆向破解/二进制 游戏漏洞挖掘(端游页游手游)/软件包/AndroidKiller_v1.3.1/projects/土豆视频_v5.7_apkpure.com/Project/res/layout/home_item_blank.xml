            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout android:background="@color/white" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@id/line_bottom" android:background="@drawable/tudou_yellow_bg" android:layout_width="fill_parent" android:layout_height="0.5dip" android:layout_marginLeft="6.0dip" android:layout_marginRight="6.0dip" />
            <ImageView android:id="@id/line_transparent" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_below="@id/line_bottom" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>